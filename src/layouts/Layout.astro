---
import FullscreenModal from '../components/FullscreenModal.svelte';

// Supports weights 300-700
import '@fontsource-variable/teko';

import '@fontsource/abril-fatface';

// Supports weights 200-700
import '@fontsource-variable/oswald';

import '@fontsource/dm-serif-display';

// Supports weights 400-900
import '@fontsource-variable/playfair-display';

import '@fontsource/righteous';

// Supports weights 300-700
import '@fontsource-variable/space-grotesk';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ein Quiz zum 9. November." />
		<meta name="author" content='Dacjan "kurwjan" Gapinski'>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<FullscreenModal client:only="svelte"></FullscreenModal>
		<video preload="auto" autoplay muted loop>
			<source src="/video.webm" type="video/webm">
		</video>
		<div class="left">
			<main class="on-video">
				<slot />
			</main>
		</div>
	</body>
</html>

<style is:global>
	:root {
	}

	html {
		background-color: black;
		
		width: 100%;
		height: 100%;
	}

	body {
		color: white;

		margin: 0;
		width: 100%;
		height: 100%;
	}

	video {
		width: 100%;
		height: 100%;
		position: absolute;
		object-fit: cover;
		z-index: -1;
	}

	.left {
		display: flex;
		flex-direction: column;
		align-items: start;
		justify-content: center;

		padding: 2em 16em;

		height: 100%;
	}

	.on-video {
		box-sizing: border-box;

		font-family: sans-serif;
		font-size: xx-large;

		display: flex;
		flex-direction: column;
		align-items: center;
		text-align: center;

		width: 50%;
		max-width: 13em;

		padding: 0 0 0.95em;

		/* Frosted glass effect */
		background: rgba(12, 12, 12, 0.75);
		border-radius: 16px;
		box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
		backdrop-filter: blur(36px);
		border: 2px solid rgba(0, 0, 0, 0.3);
	}
</style>

<script is:inline>
	document.documentElement.classList['add']('dark');
</script>
