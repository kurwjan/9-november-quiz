---
import '@fontsource-variable/playfair-display';
import '@fontsource-variable/space-grotesk';

import openGraphImage from '../images/opengraph_bg.webp';
---

<!DOCTYPE html>
<html class="flex items-center justify-center">
    <body class="flex">
        <img src={openGraphImage.src} />
        <main>
            <h1>9. November</h1>
            <h3>Quiz zum Jahr 1918</h3>
        </main>
    </body>
</html>

<style>
    html {
        width: 100%;
        height: 100%;
    }

    body {
        width: 1200px;
        height: 630px;

        justify-content: center;
        align-items: center;

        font-family: "Space Grotesk Variable", sans-serif;
    }

    img {
        position: absolute;
        z-index: -50;
    }

    main {
        color: white;

        font-family: sans-serif;
        font-size: xx-large;

        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;

        height: fit-content;
        width: fit-content;

        padding: 0.5em 2em;

        /* Frosted glass effect */
        background: rgba(12, 12, 12, 0.75);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(36px);
        border: 2px solid rgba(0, 0, 0, 0.3);
    }

    h1 {
        font-family: "Playfair Display Variable", serif;
        font-variant-caps: small-caps;
        font-size: 4rem;
        font-weight: 600;
        line-height: 0.8;

        margin-top: 0.5em;
    }

    h3 {
        font-family: "Playfair Display Variable", serif;
        font-size: 1.5rem;
        font-weight: 600;

        align-self: end;

        margin-bottom: 1.2em;
        margin-right: 1.8em;
    }
</style>