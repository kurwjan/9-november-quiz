---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';

const allSingleChoices = await getCollection('single_choice');
---

<Layout title="title">
    <video preload="auto" autoplay muted loop>
        <source src="/video.mp4" type="video/mp4">
    </video>
    <div class="center">
        <div class="on-video">
            {
                allSingleChoices.map((singleChoice) => (
                        <a href={`/quiz/${singleChoice.slug}`}>{singleChoice.data.title}</a>
                ))
            }
        </div>
    </div>
</Layout>

<style>
    video {
        width: 100%;
        height: 100%;
        position: absolute;
        object-fit: cover;
        z-index: -1;
    }

    .center {
        display: flex;
        justify-content: center;
        align-items: center;

        width: 100%;
        height: 100%;
    }

    .on-video {
        font-family: sans-serif;
        font-size: xx-large;

        background-color: rgba(58, 246, 86, 0.2);
        backdrop-filter: blur(10px);

        padding: 2em;

        width: fit-content;
        height: fit-content;
    }
</style>